{
  "name": "microbundle-package-template",
  "version": "1.0.0",
  "description": "",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "esmodule": "dist/index.esmodule.js",
  "umd:main": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "umd": "./dist/index.umd.js",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.module.js"
    }
  },
  "scripts": {
    "lint": "eslint src --color",
    "size": "npm run build && size-limit",
    "check-types": "tsc --noEmit true",
    "build": "del-cli 'dist/*' && microbundle build --entry src/index.ts --name microbundle-package-template --css inline --tsconfig tsconfig.build.json"
  },
  "keywords": [],
  "author": "hunghg255",
  "license": "ISC",
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.2.4",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "del-cli": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "microbundle": "^0.15.1",
    "prettier": "^2.8.8",
    "size-limit": "^8.2.4",
    "typescript": "^4.8.4"
  },
  "files": [
    "dist/*.{js,mjs,ts,map}",
    "dist/components/*.ts",
    "dist/utils/nonce.d.ts",
    "LICENSE",
    "ACKNOWLEDGMENTS",
    "README.md",
    "package.json"
  ],
  "size-limit": [
    {
      "path": "dist/index.module.js",
      "name": "a",
      "import": "{ a }",
      "limit": "3 KB"
    },
    {
      "path": "dist/index.module.js",
      "name": "b",
      "import": "{ b }",
      "limit": "3 KB"
    }
  ]
}
